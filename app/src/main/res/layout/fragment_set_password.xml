<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_200"
            android:text="Thêm mã bảo vệ"
            android:textColor="@color/color_app"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:autofillHints="password"
            android:background="@drawable/background_et_login"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="@dimen/dp_5"
            android:hint="Mã bảo vệ mới"
            android:inputType="numberPassword"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:autofillHints="password"
            android:background="@drawable/background_et_login"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="@dimen/dp_5"
            android:hint="Nhập lại mã bảo vệ"
            android:inputType="numberPassword"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10" />

        <TextView
            android:id="@+id/text_view_set_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/background_button_home"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>