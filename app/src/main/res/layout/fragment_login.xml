<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_80"
            android:text="Đăng nhập"
            android:textColor="@color/color_app"
            android:textSize="32sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:autofillHints="emailAddress"
            android:background="@drawable/background_et_login"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="@dimen/dp_5"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:autofillHints="password"
            android:background="@drawable/background_et_login"
            android:drawableStart="@drawable/icon_password"
            android:drawablePadding="@dimen/dp_5"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="Quên mật khẩu ?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/background_round_color_app"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:id="@+id/text_view_no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_login_no_account"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/text_view_sign_up_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/string_login_sign_up_now"
                android:textColor="@color/colorHome"
                android:textSize="@dimen/dp_16" />
        </LinearLayout>
    </LinearLayout>
</layout>